=form_for @user, :html=>{:multipart=>true} do |f|
  -if @user.errors.any?
    .div.error
      %h2 При сохранении произошли ошибки
      %ul
        -@user.errors.full_messages.each do |msg|
          %li=msg

    .field
    = f.label :login
    %br
    = f.text_field :login
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :role
    %br
    = f.select :role, {"Оператор" => "0", "Преподаватель" => "2"}
  .field
    = f.label :password
    %br
    = f.password_field :password, :size => 15
  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation, :size => 15
  .actions
    = f.submit 'Сохранить'
